@model SistemaInventario.Modelos.Bodega
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}

<form method="post">
    <div class="reo p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.Id != 0)
    {
        titulo = "Actualizar Bodega";
    }

    <div class="col-12 border-bottom">
        <h2 class="text-primary">@titulo</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="col-4">
            <label asp-for="Nombre"></label>
        </div>
        <div class="col-8">
            <input asp-for="Nombre"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>
    <div class="col-8 pt-4">
        <div class="col-4">
            <label asp-for="Descripcion"></label>
        </div>
        <div class="col-8">
            <input asp-for="Descripcion" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Estado"></label>
            </div>
            <div class="col-4">
                <select asp-for="Estado" class="form-control">
                    <option value="true"></option>
                    <option value="false"></option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.Id != 0)
                {
                    <partial name="_BotonesActualizarYRegresar"/>
                }
                else
                {
                    <partial name="_BotonesCrearYRegresar" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


